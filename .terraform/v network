
resource "azurerm_resource_group" "priya -rg" {
  name     = "tf-resources"
  location = "East Us"
}

resource "azurerm_virtual_network" "priya-vnet" {
  name                = "v-network 1-network"
  address_space       = ["10.0.0.0/16"]
  location            = azurerm_resource_group.East Us.location
  resource_group_name = azurerm_resource_group.priya -rg.name
}

resource "azurerm_subnet" "priya-s" {
  name                 = "s-p"
  resource_group_name  = azurerm_resource_group.priya -rg.name
  virtual_network_name = azurerm_virtual_network.v-network 1.name
  address_prefixes     = ["10.0.2.0/24"]
}
